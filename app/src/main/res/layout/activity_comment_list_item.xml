<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.example.administrator.helloword.fragments.inputcell.widgets.AvatarView
        android:id="@+id/comment_list_item_iv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/comment_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dsf"
        android:layout_alignTop="@+id/comment_list_item_iv"
        android:layout_toRightOf="@+id/comment_list_item_iv"
        android:layout_toEndOf="@+id/comment_list_item_iv"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />
    <TextView
        android:id="@+id/comment_list_item_tiem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dsfgdshgfdgjhgfj"
        android:layout_alignBottom="@+id/comment_list_item_iv"
        android:layout_alignParentRight="true"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"/>

</RelativeLayout>

    <TextView
        android:id="@+id/comment_list_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="123"
        android:textSize="15dp"
        android:paddingTop="8dp"/>



</LinearLayout>